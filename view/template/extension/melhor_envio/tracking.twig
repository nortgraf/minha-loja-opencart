<div class="modal fade" tabindex="-1" role="dialog" id="modal-melhor-envio-tracking">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"></h4>
      </div>
      <div class="modal-body">
        <table class="table table-bordered table-hover">
          <thread>
            <tr>
              <th class="text-center"><b>{{ column_id }}</b></th>
              <th class="text-center"><b>{{ column_tracking }}</b></th>
              <th class="text-center"><b>{{ column_status_message }}</b></th>
            </tr>
          </thread>
          <tbody>
            {% if not error %}
            <tr>
              <td class="text-center">{{ id }}</td>
              <td class="text-center">{{ tracking }}</td>
              <td class="text-center">{{ status_message }}</td>
            </tr>
            {% else %}
            <tr>
              <td colspan="3" class="text-center">{{ error }}</td>
            </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ button_close }}</button>
      </div>
    </div>
  </div>
  <script>
    $('#modal-melhor-envio-tracking').on('hidden.bs.modal', function() {
      $('#modal-melhor-envio-tracking').remove();
    })
  </script>
</div>