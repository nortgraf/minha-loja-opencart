{{ header }}{{ column_left }}
<div id="content">
<style type="text/css">
.nav-tabs { border-bottom: 2px solid #DDD; }
.nav-tabs > li.active > a, .nav-tabs > li.active > a:focus, .nav-tabs > li.active > a:hover { border-width: 0; }
.nav-tabs > li > a { border: none; color: #666; }
.nav-tabs > li.active > a, .nav-tabs > li > a:hover { border: none; color: #4285F4 !important; background: transparent; }
.nav-tabs > li > a::after { content: ""; background: #4285F4; height: 2px; position: absolute; width: 100%; left: 0px; bottom: -1px; transition: all 250ms ease 0s; transform: scale(0); }
.nav-tabs > li.active > a::after, .nav-tabs > li:hover > a::after { transform: scale(1); }
.tab-nav > li > a::after { background: #21527d none repeat scroll 0% 0%; color: #fff; }
body{ background: #EDECEC;}
.nav-tabs li a:focus {outline: none;}
</style>
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
				<a data-toggle="tooltip" title="{{ button_show_js_modal }}" class="btn btn-warning showModifyJsModal"><i class="fa fa-cog"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
				<ul class="nav nav-tabs">
					<li class="active"><a href="#tab-general" data-toggle="tab">{{ tab_general }}</a></li>
					<li><a href="#tab-filemanager" data-toggle="tab">{{ tab_filemanager }}</a></li>
				</ul>
				<div class="tab-content">
					<div id="tab-general" class="tab-pane active">
						<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="module_digitcart_elfinder_status" id="input-status" class="form-control">
										{% if module_digitcart_elfinder_status %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
										{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-click">{{ entry_click }}</label>
								<div class="col-sm-10">
									<select name="module_digitcart_elfinder_click" id="input-click" class="form-control">
										<option value="1" {{ module_digitcart_elfinder_click == '1' ? 'selected="selected"' : '' }}>{{ text_click }}</option>
										<option value="2" {{ module_digitcart_elfinder_click == '2' ? 'selected="selected"' : '' }}>{{ text_dbl_click }}</option>
									</select>
								</div>
							</div>
							<legend>{{ text_watermark }}</legend>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-watermark">{{ entry_status }}</label>
								<div class="col-sm-10">
									<select name="module_digitcart_elfinder_watermark[status]" id="input-watermark" class="form-control">
										{% if module_digitcart_elfinder_watermark.status %}
											<option value="1" selected="selected">{{ text_enabled }}</option>
											<option value="0">{{ text_disabled }}</option>
										{% else %}
											<option value="1">{{ text_enabled }}</option>
											<option value="0" selected="selected">{{ text_disabled }}</option>
										{% endif %}
									</select>
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_image }}</label>
								<div class="col-sm-10"><a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
									<input type="hidden" name="module_digitcart_elfinder_watermark[image]" value="{{ module_digitcart_elfinder_watermark.image }}" id="input-image" />
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label">{{ entry_transparency }}</label>
								<div class="col-sm-10">
									<input type="text" class="form-control" name="module_digitcart_elfinder_watermark[transparency]" value="{{ module_digitcart_elfinder_watermark.transparency }}">
								</div>
							</div>
							<div class="form-group">
								<label class="col-sm-2 control-label" for="input-watermark">{{ entry_distance }}</label>
								<div class="col-sm-10">
									<div class="col-sm-6">
										<div class="col-sm-4">
											<input type="text" class="form-control" name="module_digitcart_elfinder_watermark[horizontal_px]" value="{{ module_digitcart_elfinder_watermark.horizontal_px }}">
										</div>
										<label class="col-sm-4 control-label" style="text-align:center">{{ text_px_from }}</label>
										<div class="col-sm-4">
											<select name="module_digitcart_elfinder_watermark[horizontal_selection]" class="form-control">
												{% if module_digitcart_elfinder_watermark.horizontal_selection == 'right' %}
													<option value="right" selected="selected">{{ text_right }}</option>
													<option value="left">{{ text_left }}</option>
												{% else %}
													<option value="right">{{ text_right }}</option>
													<option value="left" selected="selected">{{ text_left }}</option>
												{% endif %}
											</select>
										</div>
									</div>
									<div class="col-sm-6">
										<div class="col-sm-4">
											<input type="text" class="form-control" name="module_digitcart_elfinder_watermark[vertical_px]" value="{{ module_digitcart_elfinder_watermark.vertical_px }}">
										</div>
										<label class="col-sm-4 control-label" style="text-align:center">{{ text_px_from }}</label>
										<div class="col-sm-4">
											<select name="module_digitcart_elfinder_watermark[vertical_selection]" class="form-control">
												{% if module_digitcart_elfinder_watermark.vertical_selection == 'bottom' %}
													<option value="bottom" selected="selected">{{ text_bottom }}</option>
													<option value="top">{{ text_top }}</option>
												{% else %}
													<option value="bottom">{{ text_bottom }}</option>
													<option value="top" selected="selected">{{ text_top }}</option>
												{% endif %}
											</select>
										</div>
									</div>
								</div>
							</div>
						</form>
					</div>
					<div id="tab-filemanager" class="tab-pane">
						<div id="dc-elfinder"></div>
					</div>
				</div>
      </div>
    </div>
  </div>
</div>
<div id="modifyJsModal" class="modal fade" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h2 class="modal-title">{{ text_modify_js }}</h2>
			</div>
			<div class="modal-body">
				<div class="form-group clearfix">
					<div class="col-sm-12">{{ text_files_note }}</div>
				</div>
				<div class="form-group clearfix common-js">
					<div class="col-sm-12"><strong>common.js</strong></div>
					<div class="col-sm-12"><input value="{{ common_js }}" type="text" name="js_files[common]" class="form-control" /></div>
				</div>
				<div class="form-group clearfix summernote-js">
					<div class="col-sm-12"><strong>summernote.js</strong><br></div>
					<div class="col-sm-12"><input value="{{ summernote_js }}" type="text" name="js_files[summernote]" class="form-control" /></div>
				</div>
				<div class="form-group clearfix">
					<div class="col-sm-12"><a data-loading-text="<i class='fa fa-spin fa-spinner'></i>" id="modifyJsFileBtn" class="btn btn-danger">{{ text_modify_js }}</a></div>
				</div>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript" id="dc-elfinder-module-script" data-elfinder-url="{{ elfinder_url }}"><!--
{% if not IsJsModified %}
	$('#modifyJsModal').modal('show');
{% else %}
	var activeTab = null;
	$('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
		activeTab = $(e.target).attr('href');
		if (activeTab == '#tab-filemanager') {
			$('#dc-elfinder').elfinder({
				url : $('#dc-elfinder-module-script').data('elfinder-url')
			});
		} else {
			$('#dc-elfinder').remove();
			location.reload();
			$('#tab-filemanager').append('<div id="dc-elfinder"></div>');
		}
	});
{% endif %}
$('body').on('click', '.showModifyJsModal', function() {
	$('#modifyJsModal').modal('show');
});
if (typeof(Storage) !== "undefined") {
	$('.nav-tabs a').on('click', function() {
		localStorage.setItem("digitcart-elfinder-active-tab", $(this).attr('href'));
	});
	if (localStorage.getItem("digitcart-elfinder-active-tab")) {
		$('.nav-tabs a[href="' + localStorage.getItem("digitcart-elfinder-active-tab") + '"]').trigger('click');
	}
}
$(document).on('click', '#modifyJsFileBtn', function() {
	var t = $(this);
	$.ajax({
		url: 'index.php?route=extension/module/digitcart_elfinder/modifyJsFile&user_token=' + getURLVar('user_token'),
		type: 'post',
		data: $('#modifyJsModal input[type=\'text\']'),
		dataType: 'json',
		success: function(json) {
			$('#modifyJsModal div[class^="text-"]').remove();
			for (i in json['common']['info']) {
				$('#modifyJsModal .common-js').append('<div class="text-info col-sm-12">' + json['common']['info'][i] + '</div>');
			}
			for (i in json['common']['error']) {
				$('#modifyJsModal .common-js').append('<div class="text-danger col-sm-12">' + json['common']['error'][i] + '</div>');
			}
			for (i in json['common']['success']) {
				$('#modifyJsModal .common-js').append('<div class="text-success col-sm-12">' + json['common']['success'][i] + '</div>');
			}
			for (i in json['summernote']['info']) {
				$('#modifyJsModal .summernote-js').append('<div class="text-info col-sm-12">' + json['summernote']['info'][i] + '</div>');
			}
			for (i in json['summernote']['error']) {
				$('#modifyJsModal .summernote-js').append('<div class="text-danger col-sm-12">' + json['summernote']['error'][i] + '</div>');
			}
			for (i in json['summernote']['success']) {
				$('#modifyJsModal .summernote-js').append('<div class="text-success col-sm-12">' + json['summernote']['success'][i] + '</div>');
			}
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});
//--></script>
{{ footer }}