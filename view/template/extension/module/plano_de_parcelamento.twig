{{ header }}{{ column_left }}
<div id="content">
<style>
#PlanoDeParcelamento{display: block !important;}
</style>
  <div id="PlanoDeParcelamento" style="display: block !important;">
    <div class="page-header">
      <div class="container-fluid">

        <div class="pull-right">
          <button type="button" form="form-{{ code }}" data-submission-type="save" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
          <button type="button" form="form-{{ code }}" data-submission-type="save-and-close" data-toggle="tooltip" title="{{ button_save_and_close }}" class="btn btn-info"><i class="fa fa-save"></i></button>
          <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
        </div>

        <h1>{{ heading_title }} <span class="version badge">{{ version }}</span></h1>

        <ul class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>

    <div class="container-fluid">

      {% if error_warning %}
        <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      
      {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      
      <div id="fountainG" class="ajax-loader">
        <div id="fountainG_1" class="fountainG"></div>
        <div id="fountainG_2" class="fountainG"></div>
        <div id="fountainG_3" class="fountainG"></div>
        <div id="fountainG_4" class="fountainG"></div>
        <div id="fountainG_5" class="fountainG"></div>
        <div id="fountainG_6" class="fountainG"></div>
        <div id="fountainG_7" class="fountainG"></div>
        <div id="fountainG_8" class="fountainG"></div>
      </div>

      <div class="panel panel-default">

        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        </div>

        <div class="panel-body">

          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-{{ code }}" class="form-horizontal" autocomplete="off">

            <ul id="global-tabs" class="nav nav-tabs">
              <li class="active"><a href="#tab-modules" data-toggle="tab"><i class="fa fa-list orange"></i>{{ tab_modules }}</a></li>
              <li><a href="#tab-config" data-toggle="tab"><i class="fa fa-cog violet"></i>{{ tab_config }}</a></li>
              <li><a href="{{ to_layouts }}" target="_blank"><i class="fa fa-th aqua-green"></i>{{ tab_layouts }}</a></li>
              <li><a href="#tab-help" data-toggle="tab"><i class="fa fa-life-ring marine-blue"></i>{{ tab_help }} <span class="badge badge-tab-help"></span></a></li>
            </ul>

            <div class="tab-content">

              <div id="tab-modules" class="tab-pane active">

                <div class="row">

                  <div id="vtabs" class="col-sm-3">

                    <ul id="tab-container" class="nav nav-tabs tabs-left"><!--<ul id="" class="tab-container nav nav-pills nav-stacked">-->
                      {% for key, module in modules %}
                        <li class="{{ (not is_new and module.module_id == module_id) ? "active" : "" }}">
                          <a href="{{ (not is_new and module.module_id == current_module_id) ? "javascript:void(0)" : module.actions.edit }}">
                            <i class="fa fa-minus-circle red" data-url="{{ module.actions.delete }}" aria-hidden="true"></i>
                            {% if module.status %}
                              <span>{{ module.name }}</span>
                            {% else %}
                              <span class="red">{{ module.name }}</span>
                            {% endif %}
                          </a>
                        </li>
                      {% endfor %}

                      {% if is_new %}
                        <li class="active">
                          <a href="javascript:void(0)">
                            <i class="fa fa-plus-circle green"></i>
                            <span>{{ text_new }}</span>
                          </a>
                        </li>
                      {% endif %}
                    </ul>

                    <div class="well well-sm">
                      <a href="{{ add_new_action }}" class="btn-add-new btn btn-info btn-block">
                        <i class="fa fa-plus-circle"></i> {{ button_add_new }}
                      </a>
                    </div>    
                  </div>
                  <!-- .col -->

                  <hr class="hidden-lg hidden-md hidden-sm" />

                  <div id="vtabs-content-container" class="col-sm-9">

                    <ul id="module-tabs" class="nav nav-tabs">
                      <li class="active"><a href="#tab-general" data-toggle="tab"><i class="fa fa-cog marine-blue"></i>{{ tab_general }}</a></li>
                      <li><a href="#tab-installment-plans" data-toggle="tab"><i class="fa fa-money aqua-green"></i>{{ tab_installment_plans }}</a></li>
                      <li><a href="#tab-cards" data-toggle="tab"><i class="fa fa-credit-card olive"></i>{{ tab_cards }}</a></li>
                    </ul>

                    <div class="tab-content">

                      <div id="tab-general" class="tab-pane active">

                        <div class="panel-group panel-group-accordion" id="panel-group-general">

                          <div class="panel panel-default">
                            <div class="panel-heading">
                              <h4 class="panel-title">
                                <a class="collapsed" data-toggle="collapse" data-parent="#panel-group-general" href="#panel-group-general-collapse-general">{{ text_heading_general }}</a>
                              </h4>
                            </div>
                            <div id="panel-group-general-collapse-general" class="panel-collapse collapse">
                              <div class="panel-body">

                                <input type="hidden" name="{{ _code }}[code]" value="{{ code }}" />
                                <input type="hidden" name="{{ _code }}[module_id]" value="{{ module_id }}" />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
                                  <div class="col-sm-10">

                                    <div class="row">
                                      <div class="col-sm-10 col-md-9 col-lg-8">
                                        <input type="text" name="{{ _code }}[name]" value="{{ plano_de_parcelamento.name }}" id="input-name" placeholder="{{ entry_name }}" class="form-control" maxlength="64" />
                                        {% if error_name %}
                                          <p class="help-block">
                                            <span class="text-danger">{{ error_name }}</span>
                                          </p>
                                        {% endif %}
                                      </div>
                                    </div>

                                  </div>
                                </div>

                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-title-{{ primary_language.language_id }}">
                                    <span data-toggle="tooltip" title="{{ help_title }}">{{ entry_title }}</span>
                                  </label>
                                  <div class="col-sm-10">
                                    {% for language in languages %}
                                      <div class="flaggish-input-container">
                                        <img class="img-flag" src="{{ language.image }}" title="{{ language.name }}" />
                                        <input type="text" name="{{ _code }}[title][{{ language.language_id }}]" value="{{ plano_de_parcelamento.title[language.language_id] is defined ? plano_de_parcelamento.title[language.language_id] : '' }}" placeholder="{{ entry_title }} ({{ language.name }})" id="input-title-{{ language.language_id }}" class="input-title flaggish-input form-control" />
                                      </div>
                                    {% endfor %}
                                  </div>
                                </div>

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-title-link">
                                    <span data-toggle="tooltip" title="{{ help_title_link }}">{{ entry_title_link }}</span>
                                  </label>
                                  <div class="col-sm-10">
                                    <input type="text" name="{{ _code }}[title_link]" value="{{ plano_de_parcelamento.title_link }}" id="input-title-link" placeholder="{{ entry_title_link }}" class="form-control" />
                                  </div>
                                </div>

                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-html-content-{{ primary_language.language_id }}">
                                    <span data-toggle="tooltip" title="{{ help_html_content }}">{{ entry_html_content }}</span>
                                  </label>
                                  <div class="col-sm-10">
                                    <div class="tab-pane">
                                      <ul class="nav nav-tabs">
                                        {% for language in languages %}
                                          <li class="{{ language.language_id == primary_language.language_id ? 'active' : '' }}">
                                            <a href="#tab-html-content-{{ language.language_id }}" data-toggle="tab">
                                              <img src="{{ language.image }}" title="{{ language.name }}" /> {{ language.name }}                                           
                                            </a>
                                          </li>
                                        {% endfor %}
                                      </ul>
                                      <div class="tab-content">
                                        {% for language in languages %}
                                          <div class="tab-pane {{ language.language_id == primary_language.language_id ? 'active' : '' }}" id="tab-html-content-{{ language.language_id }}">
                                            <textarea name="{{ _code }}[html_content][{{ language.language_id }}]" id="input-html-content-{{ language.language_id }}" class="{{ _code }}-summernote form-control" data-lang="{{ config[code~'_config'].editor.lang is defined and config[code~'_config'].editor.lang ? config[code~'_config'].editor.lang : '' }}" rows="2">{{ plano_de_parcelamento.html_content[language.language_id] is defined ? plano_de_parcelamento.html_content[language.language_id] : '' }}</textarea>
                                          </div>
                                        {% endfor %}
                                      </div>
                                    </div>
                                    <!-- /.tab-pane -->
                                  </div>
                                </div>

                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label"  for="input-image">
                                    {{ entry_image }}
                                  </label>
                                  <div class="col-sm-10">
                                    <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail">
                                      <img src="{{ plano_de_parcelamento.thumb }}" alt="" title="" data-placeholder="{{ plano_de_parcelamento.placeholder }}" />
                                    </a>
                                    <input type="hidden" name="{{ _code }}[image]" value="{{ plano_de_parcelamento.image }}" id="input-image" />

                                    <div class="space-10"></div>

                                    <div class="row">
                                      <div class="col-md-8 col-lg-6">
                                        <div class="input-group">
                                          <span class="input-group-addon">{{ entry_width }}</span>
                                          <input type="number" name="{{ _code }}[width]" value="{{ plano_de_parcelamento.width }}" placeholder="{{ entry_width }}" id="input-width" class="form-control" min="0" />
                                          <span class="input-group-addon">{{ entry_height }}</span>
                                          <input type="number" name="{{ _code }}[height]" value="{{ plano_de_parcelamento.height }}" placeholder="{{ entry_height }}" id="input-height" class="form-control" min="0" />
                                        </div>
                                        {% if error_width or error_height %}
                                          <p class="help-block">
                                            {% if error_width %}
                                              <span class="text-danger">{{ error_width }}</span>
                                            {% endif %}                            
                                            {% if error_height %}
                                              <span class="text-danger">{{ error_height }}</span>
                                            {% endif %}                            
                                          </p>
                                        {% endif %} 
                                      </div>
                                    </div>

                                  </div>
                                </div>

                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-status">
                                    <span data-toggle="tooltip" title="{{ help_status }}">{{ entry_status }}</span>
                                  </label>
                                  <div class="col-sm-10">
                                    <div class="row">
                                      <div class="col-sm-6">
                                        <select name="{{ _code }}[status]" id="input-status" class="form-control">
                                          {% if plano_de_parcelamento.status %}
                                            <option value="1" selected="selected">{{ text_enabled }}</option>
                                            <option value="0">{{ text_disabled }}</option>
                                          {% else %} 
                                            <option value="1">{{ text_enabled }}</option>
                                            <option value="0" selected="selected">{{ text_disabled }}</option>
                                          {% endif %} 
                                        </select>
                                      </div>
                                    </div>
                                  </div>
                                </div>  

                              </div>
                            </div>
                          </div>
                          <!-- /.panel -->

                           <div class="panel panel-default">
                            <div class="panel-heading">
                              <h4 class="panel-title">
                                <a class="collapsed" data-toggle="collapse" data-parent="#panel-group-general" href="#panel-group-general-collapse-display-conditions">{{ text_heading_display_conditions }}</a>
                              </h4>
                            </div>
                            <div id="panel-group-general-collapse-display-conditions" class="panel-collapse collapse">
                              <div class="panel-body">

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-stores">
                                    <span data-toggle="tooltip" title="{{ help_stores }}">{{ entry_stores }}</span>
                                  </label>
                                  <div class="col-sm-10">
                                    <div class="well well-sm well-scrollable mbm">
                                      {% for store in stores %}
                                      <div class="checkbox">
                                        <label>
                                          <input type="checkbox" name="{{ _code }}[stores][]" value="{{ store.store_id }}" {{ (is_new == true or (store.store_id in plano_de_parcelamento.stores)) ? 'checked' : '' }} />
                                          {{ store.name }}
                                        </label>
                                      </div>
                                      {% endfor %}
                                    </div>

                                    <div class="check-uncheck-all-container">
                                      <a href="#" class="well-check-all btn btn-info btn-sm">{{ text_check_all }}</a>   
                                      <a href="#" class="well-uncheck-all btn btn-warning btn-sm">{{ text_uncheck_all }}</a>
                                    </div>

                                  </div>
                                </div> 

                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-customer-groups">
                                    <span data-toggle="tooltip" title="{{ help_customer_groups }}">{{ entry_customer_groups }}</span>
                                  </label>
                                  <div class="col-sm-10">
                                    <div class="well well-sm well-scrollable mbm">
                                      {% for customer_group in customer_groups %}
                                      <div class="checkbox">
                                        {% if customer_group.customer_group_id in plano_de_parcelamento.customer_groups %}
                                          <label>
                                            <input type="checkbox" name="{{ _code }}[customer_groups][]" value="{{ customer_group.customer_group_id }}" checked="checked" />
                                            {{ customer_group.name }}
                                          </label>
                                        {% else %}
                                          <label>
                                            <input type="checkbox" name="{{ _code }}[customer_groups][]" value="{{ customer_group.customer_group_id }}" />
                                            {{ customer_group.name }}
                                          </label>
                                        {% endif %}
                                      </div>
                                      {% endfor %}
                                    </div>

                                    <div class="check-uncheck-all-container">
                                      <a href="#" class="well-check-all btn btn-info btn-sm">{{ text_check_all }}</a>   
                                      <a href="#" class="well-uncheck-all btn btn-warning btn-sm">{{ text_uncheck_all }}</a>
                                    </div>

                                  </div>
                                </div>

                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-on-selected-products">
                                    <span data-toggle="tooltip" title="{{ help_categories }}">{{ entry_categories }}</span>
                                  </label>
                                  <div class="col-sm-10">

                                    <div class="row mbl">
                                      <div class="col-sm-6">
                                        <select name="{{ _code }}[on_selected_categories]" id="input-on-selected-categories" class="form-control">
                                          <option value="0" {{ plano_de_parcelamento.on_selected_categories == "0" ? 'selected="selected"' : '' }}>{{ text_hide_on_selected_pages }}</option>
                                          <option value="1" {{ plano_de_parcelamento.on_selected_categories == "1" ? 'selected="selected"' : '' }}>{{ text_show_on_selected_pages }}</option>
                                        </select>                            
                                      </div>
                                    </div>

                                    <div class="well well-sm well-scrollable mbm">
                                      {% for category in categories %}
                                      <div class="checkbox">
                                        {% if category.category_id in plano_de_parcelamento.categories %}
                                          <label>
                                            <input type="checkbox" name="{{ _code }}[categories][]" value="{{ category.category_id }}" checked="checked" />
                                            {{ category.name }}
                                          </label>
                                        {% else %}
                                          <label>
                                            <input type="checkbox" name="{{ _code }}[categories][]" value="{{ category.category_id }}" />
                                            {{ category.name }}
                                          </label>
                                        {% endif %}
                                      </div>
                                      {% endfor %}
                                    </div>

                                    <div class="check-uncheck-all-container">
                                      <a href="#" class="well-check-all btn btn-info btn-sm">{{ text_check_all }}</a>   
                                      <a href="#" class="well-uncheck-all btn btn-warning btn-sm">{{ text_uncheck_all }}</a>
                                    </div>

                                  </div>
                                </div>

                                <hr />   

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-on-selected-products">
                                    <span data-toggle="tooltip" title="{{ help_products }}">{{ entry_products }}</span>
                                  </label>
                                  <div class="col-sm-10">

                                    <div class="row mbl">
                                      <div class="col-sm-6">
                                        <select name="{{ _code }}[on_selected_products]" id="input-on-selected-products" class="form-control">
                                          <option value="0" {{ plano_de_parcelamento.on_selected_products == "0" ? 'selected="selected"' : '' }}>{{ text_hide_on_selected_pages }}</option>
                                          <option value="1" {{ plano_de_parcelamento.on_selected_products == "1" ? 'selected="selected"' : '' }}>{{ text_show_on_selected_pages }}</option>
                                        </select>                            
                                      </div>
                                    </div>

                                    <div class="product-select">
                                      <div class="row mbm">
                                        <div class="col-xs-6">
                                          <input class="input-product-select-autocomplete form-control" type="text" value="" placeholder="{{ help_product_select_autocomplete }}" />
                                        </div>
                                      </div> 
                                      <div class="product-select-container well well-sm well-scrollable mbm">
                                        {% for product in products %}
                                          <div data-product_id="{{ product.product_id }}">
                                            <i class="fa fa-minus-circle"></i> {{ product.name }}: {{ product.model }}
                                            <input type="hidden" name="{{ _code }}[products][]" value="{{ product.product_id }}" />
                                          </div>
                                        {% endfor %}
                                        <span class="product-select-no-results" style="display: {{ products|length <= 0 ? 'block' : 'none;' }}">{{ text_product_select_no_results }}</span>
                                      </div>
                                    </div>

                                  </div>
                                </div> 
                                  
                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-min-instal-amt-{{ primary_currency.code }}">
                                    <span data-toggle="tooltip" title="{{ help_min_instal_amt }}">{{ entry_min_instal_amt }}</span>
                                  </label>
                                  <div class="col-sm-10">

                                    <div class="tab-pane tab-pane-widget">
                                      <ul class="nav nav-tabs">
                                        {% for currency_key, currency in currencies %}
                                          <li class="{{ currency_key == primary_currency.code ? 'active' : '' }}">
                                            <a href="#tab-min-instal-amt-{{ currency.code }}" data-toggle="tab">
                                              {{ currency.code }}
                                            </a>
                                          </li>
                                        {% endfor %}
                                      </ul>
                                      <div class="tab-content">
                                        {% for currency_key, currency in currencies %}
                                          <div class="tab-pane {{ currency_key == primary_currency.code ? 'active' : '' }}" id="tab-min-instal-amt-{{ currency.code }}">
                                            <div class="row mbs">
                                              <div class="col-sm-7 col-md-6 col-lg-5">
                                                <div class="input-group">
                                                  {% if currency.symbol_left %}
                                                    <span class="input-group-addon">{{ currency.symbol_left }}</span>
                                                  {% endif %}
                                                  <input type="text" name="{{ _code }}[min_instal_amt][{{ currency.code }}]" value="{{ plano_de_parcelamento.min_instal_amt[currency.code] is defined and plano_de_parcelamento.min_instal_amt[currency.code] matches '/^\\d+$/' ? plano_de_parcelamento.min_instal_amt[currency.code]|number_format(currency.decimal_place, dec_point, thousands_sep) : '' }}" id="input-min-instal-amt-{{ currency.code }}" class="input-min-instal-amt form-control" data-currency-code="{{ currency.code }}" />
                                                  {% if currency.symbol_right %}
                                                    <span class="input-group-addon">{{ currency.symbol_right }}</span>
                                                  {% endif %}
                                                </div>
                                              </div>
                                            </div>
                                            <!-- /.row -->
                                          </div>
                                          <!-- /.tab-pane -->
                                        {% endfor %}
                                      </div>
                                      <!-- /.tab-content -->
                                    </div>
                                    <!-- /.tab-pane -->

                                  </div>
                                </div>

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-max-instal-amt-{{ primary_currency.code }}">
