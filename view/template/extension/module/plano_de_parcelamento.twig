                                          <div class="tab-pane {{ currency_key == primary_currency.code ? 'active' : '' }}" id="tab-max-instal-amt-{{ currency.code }}">
                                            <div class="row mbs">
                                              <div class="col-sm-7 col-md-6 col-lg-5">
                                                <div class="input-group">
                                                  {% if currency.symbol_left %}
                                                    <span class="input-group-addon">{{ currency.symbol_left }}</span>
                                                  {% endif %}
                                                  <input type="text" name="{{ _code }}[max_instal_amt][{{ currency.code }}]" value="{{ plano_de_parcelamento.max_instal_amt[currency.code] is defined and plano_de_parcelamento.max_instal_amt[currency.code] matches '/^\\d+$/' ? plano_de_parcelamento.max_instal_amt[currency.code]|number_format(currency.decimal_place, dec_point, thousands_sep) : '' }}" id="input-max-instal-amt-{{ currency.code }}" class="input-max-instal-amt form-control" data-currency-code="{{ currency.code }}" />
                                                  {% if currency.symbol_right %}
                                                    <span class="input-group-addon">{{ currency.symbol_right }}</span>
                                                  {% endif %}
                                                </div>
                                              </div>
                                            </div>
                                            <!-- /.row -->
                                          </div>
                                          <!-- /.tab-pane -->
                                        {% endfor %}
                                      </div>
                                      <!-- /.tab-content -->
                                    </div>
                                    <!-- /.tab-pane -->

                                  </div>
                                </div>

                                <hr />

                                <div class="form-group">
                                  <label class="col-sm-2 control-label" for="input-min-price-{{ primary_currency.code }}">
                                    <span data-toggle="tooltip" title="{{ help_min_price }}">{{ entry_min_price }}</span>
                                  </label>
                                  <div class="col-sm-10">

                                    <div class="tab-pane tab-pane-widget">
                                      <ul class="nav nav-tabs">
                                        {% for currency_key, currency in currencies %}
                                          <li class="{{ currency_key == primary_currency.code ? 'active' : '' }}">
                                            <a href="#tab-min-price-{{ currency.code }}" data-toggle="tab">
                                              {{ currency.code }}
                                            </a>
                                          </li>
                                        {% endfor %}
                                      </ul>
                                      <div class="tab-content">
                                        {% for currency_key, currency in currencies %}
                                          <div class="tab-pane {{ currency_key == primary_currency.code ? 'active' : '' }}" id="tab-min-price-{{ currency.code }}">
                                            <div class="row mbs">
                                              <div class="col-sm-7 col-md-6 col-lg-5">
                                                <div class="input-group">
                                                  {% if currency.symbol_left %}
