	{% else %} 
	<option value="{{ v['custom_field_id'] }}">{{ v['name'] }}</option>
	{% endif %} 
	{% endfor %} 
	</select>
	<span id="helpBlock" class="help-block">Selecione o campo customizado correspondente caso o tenha na loja.</span>
	</div>
	</div>
	
	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">Unico CPF/CNPJ por Cadastro</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_fiscal_unico" id="input-status" class="form-control">
	{% if (module_compraexpress_fiscal_unico) %} 
	<option value="1" selected="selected">{{ text_enabled }}</option>
	<option value="0">{{ text_disabled }}</option>
	{% else %} 
	<option value="1">{{ text_enabled }}</option>
	<option value="0" selected="selected">{{ text_disabled }}</option>
	{% endif %} 
	</select>
	<span id="helpBlock" class="help-block">Permite que tenha apenas um unico CPF/CNPJ por cadastro na loja bloqueando registros duplicados.</span>
	</div>
	</div>

	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">Campo Endere&ccedil;o > N&uacute;mero</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_numero" id="input-status" class="form-control">
	<option value="">Selecione</option>
	{% for k,v in campos %}
	{% if (module_compraexpress_numero == v['custom_field_id']) %} 
	<option value="{{ v['custom_field_id'] }}" selected="selected">{{ v['name'] }}</option>
	{% else %} 
	<option value="{{ v['custom_field_id'] }}">{{ v['name'] }}</option>
	{% endif %} 
	{% endfor %} 
	</select>
	<span id="helpBlock" class="help-block">Selecione o campo customizado correspondente caso o tenha na loja.</span>
	</div>
	</div>

