<div class="tab-content">

	<div role="tabpanel" class="tab-pane active" id="configuracoes">
	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">{{ entry_status }}</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_status" id="input-status" class="form-control">
	{% if (module_compraexpress_status) %} 
	<option value="1" selected="selected">{{ text_enabled }}</option>
