	<label class="col-sm-3 control-label" for="input-status">Campo Endere&ccedil;o > Complemento</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_complemento" id="input-status" class="form-control">
	<option value="">Selecione</option>
	{% for k,v in campos %}
	{% if (module_compraexpress_complemento == v['custom_field_id']) %} 
	<option value="{{ v['custom_field_id'] }}" selected="selected">{{ v['name'] }}</option>
	{% else %} 
	<option value="{{ v['custom_field_id'] }}">{{ v['name'] }}</option>
	{% endif %} 
	{% endfor %} 
	</select>
	<span id="helpBlock" class="help-block">Selecione o campo customizado correspondente caso o tenha na loja.</span>
	</div>
	</div>
	</div>

