	<option value="1">Modelo 01</option>
	<option value="0" selected="selected">Modelo 02</option>
	{% endif %} 
	</select>
	<span id="helpBlock" class="help-block">Modelo do checkout que deseja usar.</span>
	</div>
	</div>
	
	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">Exibir Etapas</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_resumido" id="input-status" class="form-control">
	{% if (module_compraexpress_resumido) %} 
	<option value="1" selected="selected">{{ text_enabled }}</option>
	<option value="0">{{ text_disabled }}</option>
	{% else %} 
	<option value="1">{{ text_enabled }}</option>
	<option value="0" selected="selected">{{ text_disabled }}</option>
	{% endif %} 
	</select>
	<span id="helpBlock" class="help-block">Ativa a exibir etapas no processo de cadastro, checkout na tela de sua loja (condicional ao tema usado).</span>
