	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">&nbsp;</label>
	<div class="col-sm-9">
	<div class="alert alert-info" role="alert">CSS, Topo e Rodap&eacute; Checkout Express.</div>
	</div>
	</div>

	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">Topo e rodap&eacute;</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_te" id="input-status" class="form-control">
	{% if (module_compraexpress_te) %} 
	<option value="1" selected="selected">Padr&atilde;o loja (layout usado na loja)</option>
	<option value="0">Padr&atilde;o checkout (tema padr&atilde;o opencart)</option>
	{% else %} 
	<option value="1">Padr&atilde;o loja (layout usado na loja)</option>
	<option value="0" selected="selected">Padr&atilde;o checkout (tema padr&atilde;o opencart)</option>
	{% endif %} 
	</select>
	<span id="helpBlock" class="help-block">Visual do checkout e registro em sua loja.</span>
	</div>
	</div>

	{% if (temas['themes'] is defined) %} 
	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">Custom Layout (padr&atilde;o checkout)</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_tema" id="input-status" class="form-control">
	<option value="">Padr&atilde;o</option>
	{% for k,v in temas['themes'] %} 
	<option value="{{ v['cssCdn'] }}"{{ v['cssCdn'] == module_compraexpress_tema?' selected':'' }}>{{ v['name'] }}</option>
	{% endfor %} 
	</select>
	<span id="helpBlock" class="help-block">Somente se usar "Padr&atilde;o checkout", visual do tema de acordo deseja usar.</span>
	</div>
	</div>
	{% endif %} 

		{% set selo_padrao = '<div style="text-align: left;"><span style="font-weight: bold;">COMPRE COM SEGURANÃ‡A</span></div>
	<div style="text-align: left;"><img src="'~constant('HTTPS_CATALOG')~'app/checkoutexpress/site-seguro.png" style="width: 184.5px; height: 87.573732718894px;"></div>' %}
	{% set pag_padrao = '<p><span style="font-weight: bold;">FORMAS DE PAGAMENTO<br><img src="'~constant('HTTPS_CATALOG')~'app/checkoutexpress/formas-de-pagamento.png"><br><br>FORMAS DE ENTREGA<br><img src="'~constant('HTTPS_CATALOG')~'app/checkoutexpress/forma-envio.png" style="width: 254.5px; height: 29.5594900849858px;"><br></span></p>' %}
	

	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-description">HTML 1</label>
	<div class="col-sm-9">
	<textarea name="module_compraexpress_selos" id="selos" class="html_ok form-control">{{ module_compraexpress_selos is empty?selo_padrao:module_compraexpress_selos }} 
	</textarea>
	<span id="helpBlock" class="help-block">Somente se usar "Padr&atilde;o checkout".</span>
	</div>
	</div>


	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-description">HTML 2</label>
	<div class="col-sm-9">
	<textarea name="module_compraexpress_pag" id="selos" class="html_ok form-control">{{ module_compraexpress_pag is empty?pag_padrao:module_compraexpress_pag }} 
	</textarea>
	<span id="helpBlock" class="help-block">Somente se usar "Padr&atilde;o checkout".</span>
	</div>
	</div>

	</div>

	<div role="tabpanel" class="tab-pane" id="facebook">
	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">&nbsp;</label>
	<div class="col-sm-9">
	
	</div>
	</div>

	<div class="form-group">
	<label class="col-sm-3 control-label" for="input-status">Login Facebook</label>
	<div class="col-sm-9">
	<select name="module_compraexpress_fb" id="input-status" class="form-control">
	{% if (module_compraexpress_fb) %} 
	<option value="1" selected="selected">{{ text_enabled }}</option>
	<option value="0">{{ text_disabled }}</option>
	{% else %} 
	<option value="1">{{ text_enabled }}</option>
	<option value="0" selected="selected">{{ text_disabled }}</option>
	{% endif %} 
	</select>
	<span id="helpBlock" class="help-block">Se deseja ativar login social facebook em sua loja, lembre-se que o app precisa ser configurado.</span>
