{{ header }}{{ column_left }}
<div id="content">
      <div class="page-header">
        <div class="container-fluid">
          <div class="pull-right">
            <button type="submit" form="salva-config-d5minhaconta" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
            <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
          <h1>{{ text_titletop }}</h1>
          <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
            <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_titletop }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="salva-config-d5minhaconta" class="form-horizontal">
                    <div role="tabpanel">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="configuracoes">
                          <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                            <div class="col-sm-10">
                              <select name="module_d5minhaconta_status" id="input-status" class="form-control">
                                {% if module_d5minhaconta_status %}
                                  <option value="1" selected="selected">{{ text_enabled }}</option>
                                  <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                  <option value="1">{{ text_enabled }}</option>
                                  <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                              </select>
                            </div>
                          </div>
                          <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-status">Exibir Barra de status</label>
                            <div class="col-sm-10">
                              <select name="module_d5minhaconta_exibirstatus" id="input-status" class="form-control">
                                {% if module_d5minhaconta_exibirstatus %}
                                  <option value="1" selected="selected">{{ text_enabled }}</option>
                                  <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                  <option value="1">{{ text_enabled }}</option>
                                  <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                              </select>
                            </div>
                          </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="input-complete-status"><span data-toggle="tooltip" title="Aguardando Pagamento">Aguardando Pagamento</span></label>
                            <div class="col-sm-10">
                                <div class="well well-sm" style="height: 150px; overflow: auto;">
                                    {% for order_status in order_statuses %}
                                        <div class="checkbox">
                                            <label>
                                                {% if (order_status['order_status_id'] in module_d5minhaconta_aguardando) %}
                                                    <input type="checkbox" name="module_d5minhaconta_aguardando[]" value="{{ order_status['order_status_id'] }}" checked="checked" />
                                                    {{ order_status['name'] }}
                                                {% else %}
                                                    <input type="checkbox" name="module_d5minhaconta_aguardando[]" value="{{ order_status['order_status_id'] }}"/>
                                                    {{ order_status['name'] }}
                                                {% endif %}
                                            </label>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-complete-status"><span data-toggle="tooltip" title="Pagamento Aprovado">Pagamento Aprovado</span></label>
                                <div class="col-sm-10">
                                    <div class="well well-sm" style="height: 150px; overflow: auto;">
                                        {% for order_status in order_statuses %}
                                            <div class="checkbox">
                                                <label>
                                                    {% if (order_status['order_status_id'] in module_d5minhaconta_pago) %}
                                                        <input type="checkbox" name="module_d5minhaconta_pago[]" value="{{ order_status['order_status_id'] }}" checked="checked" />
                                                        {{ order_status['name'] }}
                                                    {% else %}
                                                        <input type="checkbox" name="module_d5minhaconta_pago[]" value="{{ order_status['order_status_id'] }}"/>
                                                        {{ order_status['name'] }}
                                                    {% endif %}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-complete-status"><span data-toggle="tooltip" title="Preparando Envio">Preparando Envio</span></label>
                                <div class="col-sm-10">
                                    <div class="well well-sm" style="height: 150px; overflow: auto;">
                                        {% for order_status in order_statuses %}
                                            <div class="checkbox">
                                                <label>
                                                    {% if (order_status['order_status_id'] in module_d5minhaconta_preparando) %}
                                                        <input type="checkbox" name="module_d5minhaconta_preparando[]" value="{{ order_status['order_status_id'] }}" checked="checked" />
                                                        {{ order_status['name'] }}
                                                    {% else %}
                                                        <input type="checkbox" name="module_d5minhaconta_preparando[]" value="{{ order_status['order_status_id'] }}"/>
                                                        {{ order_status['name'] }}
                                                    {% endif %}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-complete-status"><span data-toggle="tooltip" title="Enviado">Enviado</span></label>
                                <div class="col-sm-10">
                                    <div class="well well-sm" style="height: 150px; overflow: auto;">
                                        {% for order_status in order_statuses %}
                                            <div class="checkbox">
                                                <label>
                                                    {% if (order_status['order_status_id'] in module_d5minhaconta_enviado) %}
                                                        <input type="checkbox" name="module_d5minhaconta_enviado[]" value="{{ order_status['order_status_id'] }}" checked="checked" />
                                                        {{ order_status['name'] }}
                                                    {% else %}
                                                        <input type="checkbox" name="module_d5minhaconta_enviado[]" value="{{ order_status['order_status_id'] }}"/>
                                                        {{ order_status['name'] }}
                                                    {% endif %}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-complete-status"><span data-toggle="tooltip" title="Entregue">Entregue</span></label>
                                <div class="col-sm-10">
                                    <div class="well well-sm" style="height: 150px; overflow: auto;">
                                        {% for order_status in order_statuses %}
                                            <div class="checkbox">
                                                <label>
                                                    {% if (order_status['order_status_id'] in module_d5minhaconta_entregue) %}
                                                        <input type="checkbox" name="module_d5minhaconta_entregue[]" value="{{ order_status['order_status_id'] }}" checked="checked" />
                                                        {{ order_status['name'] }}
                                                    {% else %}
                                                        <input type="checkbox" name="module_d5minhaconta_entregue[]" value="{{ order_status['order_status_id'] }}"/>
                                                        {{ order_status['name'] }}
                                                    {% endif %}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label" for="input-complete-status"><span data-toggle="tooltip" title="Cancelado">Cancelado</span></label>
                                <div class="col-sm-10">
                                    <div class="well well-sm" style="height: 150px; overflow: auto;">
                                        {% for order_status in order_statuses %}
                                            <div class="checkbox">
                                                <label>
                                                    {% if (order_status['order_status_id'] in module_d5minhaconta_cancelado) %}
                                                        <input type="checkbox" name="module_d5minhaconta_cancelado[]" value="{{ order_status['order_status_id'] }}" checked="checked" />
                                                        {{ order_status['name'] }}
                                                    {% else %}
                                                        <input type="checkbox" name="module_d5minhaconta_cancelado[]" value="{{ order_status['order_status_id'] }}"/>
                                                        {{ order_status['name'] }}
                                                    {% endif %}
                                                </label>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}