{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button name="saveSettings" type="submit" form="form-dashboard" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i>&nbsp; {{ text_btn_save }}</button>
        <button id="module_show_settings" class="btn btn-default" data-toggle="tooltip" title="{{ button_settings }}"><i class="fa fa-cog"></i></button>
        <button id="module_help_button" class="btn btn-default" data-toggle="tooltip" title="{{ button_help }}"><i class="fa fa-question-circle"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <!-- Module help -->
    <div id="module_help_panel" class="panel panel-default" style="display:none;">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-question-circle"></i> {{ text_module_helper }}</h3>
      </div>
      <div class="panel-body">
        <p>{{ text_module_intro }}</p>
        <p>{{ text_module_getstarted }}</p>
      </div>
    </div>
    <!-- Module settings -->
    <div id="module_settings_panel" class="panel panel-default" style="display:none;">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_setting }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-dashboard" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="dashboard_tasks_status" id="input-status" class="form-control">
                {% if dashboard_tasks_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-width">{{ entry_width }}</label>
            <div class="col-sm-10">
              <select name="dashboard_tasks_width" id="input-width" class="form-control">
                {% for column in columns %}
                  {% if column == dashboard_tasks_width %}
                    <option value="{{ column }}" selected="selected"> {{ column }} </option>
                  {% else %}
                    <option value="{{ column }}"> {{ column }} </option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="dashboard_tasks_sort_order" value="{{ dashboard_tasks_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
        </form>
      </div>
    </div>
    <!-- Add task -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-plus"></i> {{ text_tasks_add }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ add }}" method="post" enctype="multipart/form-data" id="form-add">
          <table class="table">
            <thead>
              <tr>
                <td class="text-left">{{ column_add_status }} <span data-toggle="tooltip" title="{{ help_add_status }}"></span></td>
                <td class="text-left">{{ column_add_task }} <span data-toggle="tooltip" title="{{ help_add_task }}"></span></td>
                <td class="text-left">{{ column_add_deadline }} <span data-toggle="tooltip" title="{{ help_add_deadline }}"></span></td>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="text-left">
                  <select name="dashboard_task_status_add" id="input-task-status-add" class="form-control">
                    <option value="2">{{ text_task_completed }}</option>
                    <option value="1" selected="selected">{{ text_task_pending }}</option>
                    <option value="0">{{ text_task_inactive }}</option>
                  </select>
                </td>
                <td class="text-left" style="width:60%;">
                  <input type="text" name="dashboard_task_description_add" placeholder="{{ entry_task_description }}" id="input-task-description-add" class="form-control" />
                </td>
                <td class="text-right">
                  <div class="input-group datetime">
                    <input type="datetime" name="dashboard_task_deadline_add" placeholder="{{ entry_task_deadline }}" data-date-format="YYYY-MM-DD HH:mm" id="input-task-deadline-add" class="form-control" /> 
                    <span class="input-group-btn"><button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button></span>
                  </div>
                </td>
                <td class="text-right">
                  <button form="form-add" formaction="{{ add }}" name="addTask" id="addTask" class="btn btn-primary" data-toggle="tooltip" title="{{ button_add }}"><i class="fa fa-plus"></i></button>
                </td>
              </tr>
            </tbody>
          </table>
        </form>
      </div>
    </div>
    <!-- Tasks list -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_tasks_list }}</h3>
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <td class="text-left">
                <div style="padding:0; float:left; width:5%;">
                  <span class="fa fa-trash"></span>
                </div>
                <div style="padding:0 12px; float:left; width:15%;">{{ column_status }} <span data-toggle="tooltip" title="{{ help_edit_status }}"></span></div>
                <div style="padding:0 12px; float:left; width:50%;">{{ column_task }} <span data-toggle="tooltip" title="{{ help_edit_task }}"></span></div>
                <div style="padding:0 12px; float:left; width:20%;">{{ column_deadline }} <span data-toggle="tooltip" title="{{ help_edit_deadline }}"></span></div>
                <div style="padding:0 12px; float:left; width:10%;">{{ column_action }} <span data-toggle="tooltip" title="{{ help_edit_action }}"></span></div>
              </td>
            </tr>
          </thead>
          <tbody>
            {% if tasks %}
              {% for task in tasks %}
                <tr>
                  <td class="text-left">
                    <form action="{{ edit }}" method="post" id="form-edit-{{ task.task_id }}" style="width:100%;">
                      <div style="padding:0; float:left; width:5%;">
                        {% if task.task_id in selected %}
                          <input type="checkbox" name="dashboard_task_delete" value="1" class="form-control" style="margin-top:12px; float:left;" checked="checked" />
                        {% else %}
                          <input type="checkbox" name="dashboard_task_delete" value="0" class="form-control" style="margin-top:12px; float:left;" />
                        {% endif %}
                        <input type="text" name="dashboard_task_id" value="{{ task.task_id }}" id="dashboard_task_id" class="form-control" style="float:left; width:28px; visibility:hidden;" />
                      </div>
                      <div style="padding:0 12px; float:left; width:15%;">
                        <select name="dashboard_task_status" id="input-task-status" class="form-control">
                          {% if task.task_status == 2 %}
                            <option value="2" selected="selected">{{ text_task_completed }}</option>
                            <option value="1">{{ text_task_pending }}</option>
                            <option value="0">{{ text_task_inactive }}</option>
                          {% elseif task.task_status == 1 %}
                            <option value="2">{{ text_task_completed }}</option>
                            <option value="1" selected="selected">{{ text_task_pending }}</option>
                            <option value="0">{{ text_task_inactive }}</option>
                          {% elseif task.task_status == 0 %}
                            <option value="2">{{ text_task_completed }}</option>
                            <option value="1">{{ text_task_pending }}</option>
                            <option value="0" selected="selected">{{ text_task_inactive }}</option>
                          {% endif %}
                        </select>
                      </div>
                      <div style="padding:0 12px; float:left; width:50%;">
                        <input type="text" name="dashboard_task_description" value="{{ task.task_description }}" placeholder="{{ task.task_description }}" id="input-task-description" class="form-control" />
                      </div>
                      <div style="padding:0 12px; float:left; width:20%;">
                        <input type="datetime" name="dashboard_task_deadline" value="{{ task.task_deadline }}" placeholder="{{ task.task_deadline }}" id="input-task-deadline" class="form-control" />
                      </div>
                      <div style="padding:0 12px; float:left; width:10%;">
                        <button type="submit" form="form-edit-{{ task.task_id }}" formaction="{{ edit }}" class="btn btn-warning" id="dashboard_task_edit" data-toggle="tooltip" title="{{ button_edit }}">
                          <span class="fa fa-save"></span>
                        </button>
                      </div>
                    </form>
                  </td>
                </tr>
              {% endfor %}
            {% else %}
              <tr>
                <td class="text-center" colspan="4">{{ text_no_tasks }}</td>
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
  // Show help panel
  $(document).ready(function () {
    $('#module_help_button').click(function () { 
      $("#module_help_panel").fadeToggle(500);
      $("#module_settings_panel").fadeOut(500);
    });
  });
  // Show settings panel
  $(document).ready(function () {
    $('#module_show_settings').click(function () { 
      $("#module_help_panel").fadeOut(500);
      $("#module_settings_panel").fadeToggle(500);
    });
  });
</script>
<script>
  // Create date picker
  $('.datetime').datetimepicker({
	  language: '{{ datepicker }}',
	  pickDate: true,
	  pickTime: true
  });
</script>
{{ footer }}