<!--{{ promotion }}-->
<fieldset>
  {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  {% endif %}
  {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
  {% endif %}
  <legend>{{ heading_title }}</legend>
  <div id="recursos" class="table-responsive col-sm-12">
        {% if extensions %}
          {% for extension in extensions %}
            <ul class="col-sm-2 ">
              <!--li class="text-left">{{ extension.icon }}</li-->
              <li style="line-height: 1.3;">{{ extension.link }}</li>
              <li style="line-height: 1.3;"><b>{{ extension.name }}</b></li>
              <li class="text-center" style="margin-top: auto;">{% if extension.installed %}
              <div class="h67dh">
                  <a href="{{ extension.edit }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i> {{ button_edit }}</a>
                  </div>
                {% else %}
                  <button type="button" class="btn btn-primary j4d53" disabled="disabled"><i class="fa fa-pencil"></i> {{ button_edit }}</button>
                {% endif %}
                {% if not extension.installed %}
                <div class="h67dh">
                  <a href="{{ extension.install }}" data-toggle="tooltip" title="{{ button_install }}" class="btn btn-success"><i class="fa fa-plus-circle"></i> {{ button_install }}</a>
                  </div>
                {% else %}
                <div class="h67dh">
                  <a href="{{ extension.uninstall }}" data-toggle="tooltip" title="{{ button_uninstall }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_uninstall }}</a>
                  </div>
                {% endif %}</li>
            </ul>
          {% endfor %}
        {% else %}
          <ul>
            <li class="text-center" colspan="5">{{ text_no_results }}</li>
          </ul>
        {% endif %}
  </div>
</fieldset>
