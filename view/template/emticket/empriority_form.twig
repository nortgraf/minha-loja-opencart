{{ header }}
<link href="view/stylesheet/emdata/colorpicker/dist/css/bootstrap-colorpicker.min.css" rel="stylesheet">
<style>
.page-header h1{
	margin-left:10px;
}
.emlogo{
	margin-top: -22px;
    margin-left: -20px;
    float: left;
}
</style>
{{ column_left }}
<div id="content" class="em-con">
  <div class="page-header empage-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-status" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
         {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
      {{ commonhead }}
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-status" class="form-horizontal">          
		  
		  
             
		  <div class="form-group required">
			<label class="col-sm-2 control-label" for="input-name{{ language.language_id }}">{{ entry_name }}</label>
			<div class="col-sm-10">
			{% for language in languages %}
				<div class="input-group"><span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="<?php echo $language['name']; ?>" /></span>
					<input type="text" name="info[{{ language.language_id }}][name]" value="{{ info[language.language_id] ? info[language.language_id].name }}" placeholder="{{ entry_name }}" id="input-name{{ language.language_id }}" class="form-control" />
				</div>			  
			  
			   {% if error_name[language.language_id] %}
			  <div class="text-danger">{{ error_name[language.language_id] }}</div>
			  {% endif %}
			   {% endfor %}
			</div>
		  </div>
               
			
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-label-bg">{{ entry_label_bg }}</label>
				<div class="col-sm-10">						
					<div class="input-group colorpicker-component cp1">
						<input name="info[label_bg]" placeholder="{{ entry_label_bg }}" type="text" class="form-control cp1" value="{{ info.label_bg }}" />
						<span class="input-group-addon"><i></i></span>
					</div>
				</div>
			</div>
			
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-label-clr">{{ entry_label_clr }}</label>
				<div class="col-sm-10">						
					<div class="input-group colorpicker-component cp1">
						<input name="info[label_clr]" placeholder="{{ entry_label_clr }}" type="text" class="form-control cp1" value="{{ info.label_clr }}" />
						<span class="input-group-addon"><i></i></span>
					</div>
				</div>
			</div>
				
				
         
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
          </div>
		  
		  <div class="form-group">
			<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
			<div class="col-sm-10">			
			  <select name="status" id="input-status" class="form-control">
                    {% if status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
              </select>
			</div>
		  </div>
		  
        </form>
      </div>
    </div>
  </div>
</div>
 
<script>
	$(function() {
		$('.cp1').colorpicker();
	});
</script>
