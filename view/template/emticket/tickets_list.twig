{{ header }}
<style>
.page-header h1{
	margin-left:10px;
}
.emlogo{
	margin-top: -22px;
    margin-left: -20px;
    float: left;
}
</style>
{{ column_left }}
<div id="content" class="em-con">
  <div class="page-header empage-header">
    <div class="container-fluid">
       <div class="pull-right">
		    <a href="{{ add }}" data-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa fa-plus"></i></a>
        <button type="button" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-ticket').submit() : false;"><i class="fa fa-trash-o"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
		{% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
     {{ commonhead }}
  <div class="container-fluid">
   {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
   {% if success %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
      </div>
      <div class="panel-body">
	   
		<div class="well">
          <div class="row">
		  
            <div class="col-sm-3">
			
              <div class="form-group">
                <label class="control-label" for="input-ticket-id">{{ entry_ticket_id }}</label>
                <input type="text" name="filter_ticket_id" value="{{ filter_ticket_id }}" placeholder="{{ entry_ticket_id }}" id="input-ticket-id" class="form-control" />
              </div>
              <div class="form-group">
                <label class="control-label" for="input-subject">{{ entry_subject }}</label>
                <input type="text" name="filter_subject" value="{{ filter_subject }}" placeholder="{{ entry_subject }}" id="input-subject" class="form-control" />
              </div>
			  
            </div>
		  
            <div class="col-sm-3">
			
              <div class="form-group">
                <label class="control-label" for="input-email">{{ entry_email }}</label>
                <input type="text" name="filter_email" value="{{ filter_email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
              </div>
			  
              <div class="form-group">
                <label class="control-label" for="input-priority">{{ entry_priority }}</label>
				<select name="filter_priority" id="input-filter-priority" class="form-control">
                  <option value="*"></option>                 
                
					 {% for priorit in prioritys %}
						{% if filter_priority and filter_priority==priorit.priority_id  %}
							<option value="{{ priorit.priority_id }}" selected="selected">{{ priorit.name }}</option>
						{% else %}
							<option value="{{ priorit.priority_id }}">{{ priorit.name }}</option>
						{% endif %}
				  {% endfor %}
                </select>
               			
              </div>
			  
            </div>
		  
            <div class="col-sm-3">
			
			<div class="form-group">
				<label class="control-label" for="input-department">{{ entry_department }}</label>
				<select name="filter_department" id="input-filter-department" class="form-control">
				  <option value="*"></option>
				  {% for departmen in departments %}
					{% if filter_department and filter_department==departmen.department_id  %}
						<option value="{{ departmen.department_id }}" selected="selected">{{ departmen.name }}</option>
					{% else %}
						<option value="{{ departmen.department_id }}">{{ departmen.name }}</option>
					{% endif %}
				  {% endfor %}
				</select>
						
			</div>			
             
              <div class="form-group">
                <label class="control-label" for="input-ticket-status">{{ entry_ticket_status }}</label>
				<select name="filter_ticket_status" id="input-ticket-status" class="form-control">
				  <option value="*"></option>
				  {% for statu in statuss %}
					{% if filter_ticket_status and filter_ticket_status==statu.id %}
						<option value="{{ statu.id }}" selected="selected">{{ statu.name }}</option>
					{% else %}
					<option value="{{ statu.id }}">{{ statu.name }}</option>
					{% endif %}
				  {% endfor %}
				</select>                
              </div>
			  
            </div>
			
            <div class="col-sm-3">
			              
              <div class="form-group">
                <label class="control-label" for="input-date-added">{{ entry_date_added }}</label>
                <div class="input-group date">
                  <input type="text" name="filter_date_added" value="{{ filter_date_added }}" placeholder="{{ entry_date_added }}" data-date-format="DD/MM/YYYY" id="input-date-added" class="form-control" />
                  <span class="input-group-btn">
                  <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
                  </span></div>
              </div> 
            </div> 
			
			<div class="col-sm-3">
			  
              <div class="form-group">
                <label class="control-label" for="input-date-modified">{{ entry_date_modified }}</label>
                <div class="input-group date">
                  <input type="text" name="filter_date_modified" value="{{ filter_date_modified }}" placeholder="{{ entry_date_modified }}" data-date-format="DD/MM/YYYY" id="input-date-modified" class="form-control" />
                  <span class="input-group-btn">
                  <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
                  </span></div>
              </div>
			  
			  
            </div>
			
			
			  <div class="col-sm-12">
			  <a href="index.php?route=emticket/tickets&user_token={{ user_token }}" data-toggle="tooltip" title="{{ statu.name }} Tickets" class="btn btn-primary">Todos </a>
			  {% for statu in statuss %}
					<a href="index.php?route=emticket/tickets&user_token={{ user_token }}&filter_ticket_status={{ statu.id }}" data-toggle="tooltip" title="{{ statu.name }} Tickets" class="btn btn-primary" style="background:{{ statu.label_bg }} !important;border-color:{{ statu.label_bg }} !important;">{{ statu.name }} <span class="badge">{{statu.getToalTichetByStatus}}</span></a>
			{% endfor %}
		</div>
			  <button type="button" id="button-filter" class="btn btn-primary pull-right"><i class="fa fa-filter"></i> {{ button_filter }}</button>
			
             
            </div>
          </div>
        </div>
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-ticket">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                  <td class="text-left">{% if sort == 'ticket_id' %}
                    <a href="{{ sort_id }}" class="{{ order|lower }}">{{ column_id }}</a>
                    {% else %}
                    <a href="{{ sort_id }}">{{ column_id }}</a>
                    {% endif %}</td>
					
					<td class="text-left">{% if sort == 'ticket_id' %}
                    <a href="{{ customer }}" class="{{ order|lower }}">Cliente</a>
                    {% else %}
                    <a href="{{ customer }}">Cliente</a>
                    {% endif %}</td>
					
					
				  <td class="text-right">{% if sort == 'subject' %}
                    <a href="{{ sort_subject }}" class="{{ order|lower }}">{{ column_subject }}</a>
                    {% else %}
                    <a href="{{ sort_subject }}">{{ column_subject }}</a>
                    {% endif %}</td>
                  <td class="text-left">{% if sort == 'email' %}
                    <a href="{{ sort_email }}" class="{{ order|lower }}">{{ column_email }}</a>
                    {% else %}
                    <a href="{{ sort_email }}">{{ column_email }}</a>
                    {% endif %}</td>
				  <td class="text-left">{% if sort == 'priority' %}
                    <a href="{{ sort_priority }}" class="{{ order|lower }}">{{ column_priority }}</a>
                    {% else %}
                    <a href="{{ sort_priority }}">{{ column_priority }}</a>
                    {% endif %}</td>
					<td class="text-left">{% if sort == 'ticket_status' %}
                    <a href="{{ sort_ticket_status }}" class="{{ order|lower }}">{{ column_ticket_status }}</a>
                    {% else %}
                    <a href="{{ sort_ticket_status }}">{{ column_ticket_status }}</a>
                    {% endif %}</td>
					<td class="text-left">{% if sort == 'department' %}
                    <a href="{{ sort_department }}" class="{{ order|lower }}">{{ column_department }}</a>
                    {% else %}
                    <a href="{{ sort_department }}">{{ column_department }}</a>
                    {% endif %}</td>
					<td class="text-left">{% if sort == 'date_added' %}
                    <a href="{{ sort_date_added }}" class="{{ order|lower }}">{{ column_date_added }}</a>
                    {% else %}
                    <a href="{{ sort_date_added }}">{{ column_date_added }}</a>
                    {% endif %}</td>
					<td class="text-left">{% if sort == 'date_modified' %}
                    <a href="{{ sort_date_modified }}" class="{{ order|lower }}">{{ column_date_modified }}</a>
                    {% else %}
                    <a href="{{ sort_date_modified }}">{{ column_date_modified }}</a>
                    {% endif %}</td>
                
					<td class="text-right">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
				{% if tickets %}
                {% for priority in tickets %}
                <tr>
                  <td class="text-center">{% if priority.ticket_id in selected %}
                    <input type="checkbox" name="selected[]" value="{{ priority.ticket_id }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ priority.ticket_id }}" />
                    {% endif %}</td>
                  <td class="text-left">#{{ priority.ticket_id }}</td>
				  <td class="text-left">{{ priority.name }}</td>
                  <td class="text-right">{{ priority.subject }}</td>
                  <td class="text-left">{{ priority.email }}</td>
                  <td class="text-left">{{ priority.priority }}</td>
                  <td class="text-left">{{ priority.ticket_status }}</td>
                  <td class="text-left">{{ priority.department }}</td>
                  <td class="text-left">{{ priority.date_added }}</td>
                  <td class="text-left">{{ priority.date_modified }}</td>
                  <td class="text-right"> <a href="{{ priority.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-primary"><i class="fa fa-eye"></i></a></td>
                </tr>
                {% endfor %}
				{% else %}
                <tr>
                  <td class="text-center" colspan="10">{{ text_no_results }}</td>
                </tr>
                 {% endif %}
              </tbody>
            </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
    </div>
  </div>



 <script type="text/javascript"><!--
